@import mixins
@import vars
@import groups
@import reset
@import front


svg
	display: block
	max-width 100%
.sprite-svg
	display: none!important
a
	color RGB($dark_gray)

.body
	color RGB($dark_gray)
	font 16px $f_reg
	display: flex
	flex-direction: column
.section
	&,&_large
		padding 0 20px
		+tablet()
			w 720px
			padding 0
			margin 0 auto
		+tablet-large()
			w 980px
		+desktop()
			w 1200px
	&_large
		+desktop-large()
			w 1320px
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
	margin 0
	-webkit-appearance none

.btn
	padding 13px 38px
	background-color RGB($dark_blue)
	color RGB($white)
	font-size 16px
	line-height 16px
	&:disabled
		background-color gray
	
.form
	&_error
		width max-content
		margin-left 10px
		font-size 12px
		line-height 20px
		color red
		position absolute
		bottom -20px
		&.hidden
			display none
.breadcrumbs
	padding 20px 0 17px
	.section
		&,&_large
			display flex
			align-items center
			column-gap 10px
	&_link,&_text
		font 14px/20px $y_reg
	&_link
		text-transform uppercase
		svg
			wh 18px,20px
	span
		color #BCBCBC
.radio
	display flex
	align-items center
	column-gap 10px
	&_input
		display none
		&:checked
			& ~ .radio
				&_icon
					&:after
						background-color #F8700D
	&_icon
		wh 24px
		display flex
		align-items center
		justify-content center
		border 1px solid #BCBCBC
		border-radius 100%
		&:after
			wh 10px
			border-radius 100%
			content ''
			display block
			transition .35s ease
	&_text
		font 16px/25px $y_reg
		color #343A40
.tip
	position relative
	&_icon
		cursor pointer
		&,svg
			wh 17px
	&:hover
		.tip_text
			opacity 1
			visibility visible
	&_text
		min-width 200px
		padding: 4px
		border-radius 4px
		background-color RGB($white)
		border 1px solid #e6edf0
		transform translateX(-50%)
		font-size 14px
		line-height 1.2
		opacity 0
		visibility hidden
		position absolute
		top 100%
		left 50%
		z-index 100
		&.to_top
			top initial
			bottom 100%
.select
	position relative
	&.active
		.select
			&_head
				svg
					transform rotate(180deg)
			&_body
				max-height 200px
				padding 13px 0 15px
				overflow-y auto
				overflow-x hidden
	&_head
		width 100%
		height 48px
		padding 11px 15px 12px 20px
		display flex
		align-items center
		justify-content space-between
		background RGB($white)
		border 1px solid #bcbcbc
		font 16px/20px $y_bold
		color #25221d
		&,svg
			transition .35s ease
		svg
			wh 13px,7px
	&_input
		display none
	&_body
		min-width 100%
		max-height 0
		display flex
		flex-direction column
		border-radius 0 0 24px 24px
		border 1px solid transparent
		background RGB($white)
		box-shadow 0 1px 10px rgba(0, 0, 0, .08)
		overflow hidden
		font 16px/20px $y_reg
		color RGB($white)
		position absolute
		top 100%
		left 0
		z-index 2
		transition .35s ease
	&_option
		w 100%
		padding 0 15px
		text-align left
		&:not(:last-child)
			margin-bottom 6px
		&.active
			background-color #f5f5f5