.head
	padding 12px 0 18px
	&-row,&-nav,&-btns
		display flex
		align-items center
		justify-content space-between
	&-logo
		&-cont
			display flex
			flex-direction column
			align-items center
	&-phone
		margin-top -2px
		display flex
		align-items center
		column-gap 6px
		font-size 14px
		line-height 28px
		color RGB($light_gray)
		svg
			wh(20px)
	&-nav
		column-gap 22px
		&_item
			flex-direction column
			position relative
		&_item,&_btn
			display flex
		&_btn
			align-items center
			column-gap 6px
			svg
				wh(6px)
		&-list
			w 100%
			max-height 0
			overflow hidden
			position absolute
			top 100%
			left 0
			transition .35s ease
	&_btns
		display flex
		column-gap 20px
		.btn
			margin-right 6px
	&_btn
		display flex
		flex-direction column
		align-items center
		row-gap 4px
		svg
			wh 33px
			