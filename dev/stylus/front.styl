.head
	padding 12px 0 18px
	background-color RGB($white)
	position fixed
	top 0
	left 0
	right 0
	z-index 100
	+desktop()
		padding 0
	&.active
		.head
			&-nav
				display flex
	&-row,&-nav
		display flex
	&-row
		align-items center
		column-gap 20px
		+desktop()
			flex-direction row
			justify-content space-between
	&-logo
		max-width 140px
		+desktop()
			max-width initial
		&-cont
			w 100%
			display flex
			align-items center
			justify-content space-between
			+desktop()
				w initial
				flex-direction column
	&-phone
		display none
		+desktop()
			margin-top -2px
			display flex
			align-items center
			column-gap 6px
			font-size 14px
			line-height 28px
			color RGB($light_gray)
			svg
				wh(20px)
	&-burger
		font-size 32px
		color RGB($dark_blue)
		+desktop()
			display none
	&-nav
		w 100%
		max-height calc(100vh - 150px)
		column-gap 22px
		overflow auto
		display none
		flex-direction column
		position absolute
		top 100%
		left 0
		+desktop()
			w initial
			display flex
			flex-direction row
			overflow visible
			position static
		&-list,&-sublist
			w 100%
			max-height 0
			overflow hidden
			transition .35s ease
			&.active
				max-height 185px
			&.showed
				max-height initial
			+desktop()
				max-height initial!important
			&-item
				align-items center
		&-list
			border-top 1px solid #d6d6d6
			opacity 0
			visibility hidden
			position fixed
			top 82px
			left 0
			right 0
			+desktop()
				padding 40px 20px 50px
				display flex
				justify-content center
				background-color RGB($white)
			a
				+desktop()
					&:hover
						color RGB($light_blue)
			&_item
				+desktop()
					padding 0 40px
					row-gap 20px
					&:not(:last-child)
						border-right 1px solid #d6d6d6
			&_btn
				padding-left 30px
				background-color #e3e3e3
				border-bottom 1px solid #d6d6d6
				+desktop()
					svg
						display none
		&-sublist
			&_item
				+desktop()
					margin-bottom 20px
			&_btn
				padding-left 40px
				background-color #f0f0f0
				border-bottom 1px solid #e3e3e3
		&_item,&_btn,&-list_item,&-sublist_item,&-list_btn,&-sublist_btn
			display flex
		&_item,&-list_item,&-sublist_item
			flex-direction column
			position relative
		&_item
			height 82px
			flex-direction row
			align-items stretch
		&_btn,&-list_btn,&-sublist_btn
			padding 10px 20px
			align-items center
			column-gap 6px
			+desktop()
				padding 0
				background none
				border-bottom none
			svg
				wh(6px)
				transition .35s ease
		&_btn,&-list_btn
			text-transform uppercase
			&.active
				svg
					transform rotate(180deg)
		&_btn
			background-color #d6d6d6
			border-bottom 1px solid #c9c9c9
			+desktop()
				position relative
				&:after
					wh 100%,7px
					content ''
					position absolute
					bottom 0
					left 0
					right 0
					transition .35s ease
		&_item
			+desktop()
				&:hover
					.head-nav_btn
						color RGB($light_blue)
					button.head-nav_btn
						&:after
							background-color RGB($light_blue)
					.head-nav-list
						opacity 1
						visibility visible
		&-form
			padding 12px 20px
			display flex
			align-items center
			background-color RGB($white)
			position relative
			+desktop()
				display none
			&_inpt
				w 100%
				padding 12px 13px
				border 1px solid RGB($shipping_blue)
				border-radius 4px
				background-color RGB($white)
				font-size 12px
				line-height 16px
				color RGB($inpt_gray)
			&_btn
				wh 20px
				position absolute
				right 40px
				svg
					wh 100%
	&_btns
		display flex
		column-gap 10px
		+desktop()
			column-gap 20px
		.btn
			display none
			margin-right 6px
			+desktop()
				display block
	&-btn
		display flex
		flex-direction column
		align-items center
		gap 4px
		font-size 13px
		white-space nowrap
		text-transform uppercase
		&_search
			display none
			+desktop()
				display flex
		svg
			wh 33px
a.head-nav-list_btn
	display none
	+desktop()
		display block
a.head-nav-list_btn + button
	+desktop()
		display none
.footer
	display: none
	&_inpt
		w 210px
		padding 12px 13px
		border 1px solid RGB($shipping_blue)
		border-radius 4px
		background-color RGB($white)
		font-size 12px
		line-height 16px
		color RGB($inpt_gray)
		&[type="date"]
			padding 11px 13px
	&-cols
		padding 32px 0 60px
		display flex
		align-items flex-start
		column-gap 27px
	&-col
		w 210px
		display flex
		flex-direction column
		row-gap 12px
		&_title
			font 12px/17px $t_bold
			color RGB($shipping_blue)
			text-transform uppercase
		&_link
			font-size 14px
			line-height 16px
			color RGB($shipping_blue)
	&-bottom
		padding-bottom 24px
		&,&_link
			color RGB($shipping_blue)
		&:before
			wh calc(100% - 100px),1px
			margin 0 auto 24px
			display block
			content ''
			background-color #CACACA
		&_row
			display flex
			align-items center
			justify-content space-between
		&_links
			display flex
			align-items center
			column-gap 20px
		&_link
			font-size 14px
			line-height 16px
	&-copy
		font-size 14px
		line-height 27px

.main
	display: none
	&-banner
		margin-bottom 122px
		padding 37px 0
		background linear-gradient(90deg,rgba(0,0,0,.25),transparent)
		position relative
		.section
			display flex
			flex-direction column
			align-items center
		&:after
			wh 100%
			content ''
			background-color #011E49
			position absolute
			top 0
			z-index -1
		&_row
			w 100%
			padding 0 20px
			display flex
			align-items center
		&_col
			margin-right 80px
		&_title
			font 48px/57.6px $t_bold
			color RGB($white)
		&_text
			max-width 530px
			margin-top 38px
			font 24px/28px $y_reg
			color RGB($white)
		&_img
			margin-bottom 60px
		&-form
			margin 0 auto
			padding 42px
			column-gap 10px
			border-radius 8px
			background-color RGBA($white)
			box-shadow 0 4px 20px 0 rgba(0,0,0,.06)
			position absolute
			top calc(100% - 58px)
			&,&_half
				display flex
				align-items flex-end
			&_half
				column-gap 40px
			&-label
				display flex
				flex-direction column
				row-gap 6px
				font 12px/28px $f_bold
				&_text
					color RGB($dark_blue)
				&_inpt
					w 190px
			&_icon
				wh 20px
				margin-bottom 17px
	&-slider
		padding 60px 0 50px
		display flex
		align-items center
		flex-wrap wrap
		justify-content center
		column-gap 68px
		row-gap 55px
		&_inner
			w calc(100% - 200px)
			display flex
			align-items center
			overflow hidden
		&_arrow
			svg
				wh 31px,62px
		&_dots
			padding 10px 0
			display flex
			align-items center
			justify-content center
			column-gap 24px
		&_dot
			wh 8px
			border-radius 100%
			background-color #D6D6D6
			&.active
				background-color RGB($dark_blue)
	&-slide
		w 100%
		flex-shrink 0
		display flex
		align-items flex-start
		column-gap 45px
		transition .35s ease
		&_left
			wh 550px, 310px
			flex-shrink 0
			iframe
				wh 100%
		&_right
			padding 5px 0
			display flex
			flex-direction column
			align-items flex-start
			row-gap 25px
		&_title
			font 32px/39px $t_bold
		&_text
			font 20px/26px $y_reg
		&_link
			font 16px/16px $y_reg
			color RGB($dark_blue)
.discover
	&_block
		padding 27px 0
		border-bottom 1px solid #D6D6D6
	&_title
		font 55px/69px $t_reg
	&_subtitle
		font 32px/39px $t_bold
	&_text
		margin-top 27px
		font 16px/20px $y_reg
	&_list
		margin-top 75px
		display flex
		align-items flex-start
	&-item
		w calc(100% / 3)
		padding 0 30px 32px
		border-right 1px solid #D6D6D6
		&:first-child
			padding-left 0
		&:last-child
			padding-right 0
			border-right none
		&_row
			display flex
			align-items center
			justify-content space-between
			svg
				wh 80px
				flex-shrink 0
		&_title
			font 22px/28px $t_bold
			white-space nowrap
		&_text
			max-width 240px
			font 18px/27px $y_reg
.shipping
	background-color RGB($shipping_blue)
	.section
		display flex
		flex-direction column
		align-items center
	.footer_inpt
		margin-right 5px
	.btn
		background-color RGB($light_blue)
	&-form
		padding 33px 0
		display flex
		align-items center
		&_title
			margin-right 11px
			font-size 22px
			line-height 24px
			color RGB($white)
	&_bottom
		padding 82px 0 58px
		font-size 18px
		line-height 27px
		color RGB($white)
	&-list
		margin-top 24px
		img
			margin-top -10px
	&-item
		padding-bottom 8px
		&_row
			margin-bottom 15px
		&_title
			white-space initial
	&_link
		margin-top 45px
		display flex
		align-items center
		column-gap 4px
		text-transform uppercase
		color RGB($dark_blue)
		svg
			wh 16px
.news
	padding 25px 0 35px
	background-color RGB($news_gray)
	&,&_link
		color RGB($white)
	&_title
		margin-bottom 4px
		font-size 22px
		line-height 24px
	&_text,&_link
		font-size 14px
		line-height 20px
	&_text
		w 312px
		margin-right 32px
	&_link
		text-decoration underline
	&-row
		display flex
		align-items center
		justify-content center
	&-form
		display flex
		align-items center
		column-gap 20px
.trust
	margin 124px 0 40px
	padding 55px 0
	background-color RGB($light_blue)
	color RGB($white)
	text-align center
	&_title
		font 32px/28px $t_bold
	&_list
		padding 62px 0
		display flex
	&-item
		padding 8px 50px 20px
		border-right 1px solid #D6D6D6
		&:last-child
			border-right none
		&_title
			margin-bottom 20px
			font 28px/28px $t_bold
			white-space nowrap
		&_text
			font 16px/20px $y_reg
	&_text
		padding 0 32px
		font 16px/20px $y_reg